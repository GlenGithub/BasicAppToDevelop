<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        style="@style/textView_title"
        android:text="软件加密"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_appLock_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="未加密"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/tab_left_pressed"/>
        <TextView
            android:id="@+id/tv_appLock_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="已加密"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/tab_right_default"/>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_locked"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_locked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加锁软件个数"
                android:textSize="20sp"
                android:textColor="#000000"/>
            <ListView
                android:id="@+id/lv_locked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_unlocked"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_unlocked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="未加锁软件个数"
                android:textSize="20sp"
                android:textColor="#000000"/>
            <ListView
                android:id="@+id/lv_unlocked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>


    </FrameLayout>

</LinearLayout>